<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageView_layout_height"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sandwich_picture_content_description"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/linear_layout_margin_left"
                android:layout_marginStart="@dimen/linear_layout_margin_start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/simplehandwrittingregular"
                    android:text="@string/detail_also_known_as_label"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_label_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/also_known_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_tv_layout_margin_left"
                    android:layout_marginStart="@dimen/card_tv_layout_margin_start"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_tv_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/linear_layout_margin_left"
                android:layout_marginStart="@dimen/linear_layout_margin_start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/simplehandwrittingregular"
                    android:text="@string/detail_description_label"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_label_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_tv_layout_margin_left"
                    android:layout_marginStart="@dimen/card_tv_layout_margin_start"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_tv_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/linear_layout_margin_left"
                android:layout_marginStart="@dimen/linear_layout_margin_start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/simplehandwrittingregular"
                    android:text="@string/detail_ingredients_label"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_label_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ingredients_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_tv_layout_margin_left"
                    android:layout_marginStart="@dimen/card_tv_layout_margin_start"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_tv_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/linear_layout_margin_left"
                android:layout_marginStart="@dimen/linear_layout_margin_start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/simplehandwrittingregular"
                    android:text="@string/detail_place_of_origin_label"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_label_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/origin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_tv_layout_margin_left"
                    android:layout_marginStart="@dimen/card_tv_layout_margin_start"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/card_tv_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
